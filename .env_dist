# ========================================ENVIRONMENT========================================

# ======================================INTERFACE============================================
INTERFACE_BASE=http://localhost:80/{method}
# ======================================INTERFACE============================================

# ========================================ACCESS=============================================
ALLOW_IPS=localhost 1.1.1.1  # Separate by space
# ========================================ACCESS=============================================

# =========================================LOGGING===========================================
MAIN_LOGGER_NAME=like.company.balance
LOGGING_LEVEL=DEBUG
# =========================================LOGGING===========================================

# ==========================================DOCKER===========================================
PYTHONPATH=app
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
# ==========================================DOCKER===========================================

# =====================================FASTAPI & UVICORN=====================================
DEBUG=true
RELOAD=true
HOSTNAME=0.0.0.0
PORT=8080
DOCS_URL=/balance.docs  # Optional
REDOC_URL=/balance.redoc  # Optional
OPENAPI_URL=/balance.openapi.json  # Optional
# =====================================FASTAPI & UVICORN=====================================

# =========================================DATABASE==========================================
DATABASE_DRIVER=postgresql+asyncpg
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOSTNAME=balance_database
DATABASE_PORT=5432
DATABASE_NAME=postgres
# =========================================DATABASE==========================================

# ============================================CORS===========================================
ALLOW_ORIGINS=http://localhost
ALLOW_CREDENTIALS=true
ALLOW_METHODS=*
ALLOW_HEADERS=*
# ============================================CORS===========================================

# ========================================ENVIRONMENT========================================
